{
  "env": {
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "globals": {
    "game": "readonly",
    "ui": "readonly",
    "canvas": "readonly",
    "CONFIG": "readonly",
    "CONST": "readonly",
    "Hooks": "readonly",
    "foundry": "readonly",
    "Actor": "readonly",
    "Item": "readonly",
    "Journal": "readonly",
    "JournalEntry": "readonly",
    "JournalEntryPage": "readonly",
    "Folder": "readonly",
    "Roll": "readonly",
    "ChatMessage": "readonly",
    "Dialog": "readonly",
    "Application": "readonly",
    "FormApplication": "readonly",
    "DocumentSheet": "readonly",
    "ActorSheet": "readonly",
    "ItemSheet": "readonly",
    "Scene": "readonly",
    "Token": "readonly",
    "User": "readonly",
    "TextEditor": "readonly",
    "FilePicker": "readonly",
    "loadTemplates": "readonly",
    "renderTemplate": "readonly",
    "duplicate": "readonly",
    "mergeObject": "readonly",
    "setProperty": "readonly",
    "getProperty": "readonly",
    "hasProperty": "readonly",
    "expandObject": "readonly",
    "flattenObject": "readonly",
    "diffObject": "readonly",
    "isNewerVersion": "readonly",
    "fromUuid": "readonly",
    "fromUuidSync": "readonly",
    "getDocumentClass": "readonly",
    "socket": "readonly",
    "fetch": "readonly"
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-constant-condition": [
      "error",
      {
        "checkLoops": false
      }
    ],
    "no-useless-escape": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "multi-line"],
    "no-duplicate-imports": "error"
  }
}
